{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },

    {
      "name": "(lldb) Launch",
      "type": "lldb",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}", 
      "args": [],
      "cwd": "${workspaceFolder}",
      "terminal": "integrated"
    }
  ]
}